<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="frmConnexion"
    Title="frmConnexion" Height="1920" Width="1080" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="AfficherHeure">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Non du fichier de styles-->
                <ResourceDictionary Source="Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.102"/>
            <GradientStop Color="#FFC27217" Offset="0.293"/>
        </LinearGradientBrush>
    </Window.Background>

    <Viewbox Stretch="Fill">
        <Grid Margin="0,0,3.6,-4">

            <TextBox x:Name="txtLogin" HorizontalAlignment="right" Height="20" Margin="532,70,24,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Right" Height="20" Margin="527,100,24,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
            <Label Content="Utilisateur" HorizontalAlignment="Left" Margin="428,66,0,0" VerticalAlignment="Top">
                <Label.Effect>
                    <DropShadowEffect Direction="320" Opacity="0.705" ShadowDepth="6"/>
                </Label.Effect>
            </Label>
            <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="428,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.038,0.49" >
                <Label.Effect>
                    <DropShadowEffect Direction="320" Opacity="0.7" ShadowDepth="6"/>
                </Label.Effect>
            </Label>
            <Image x:Name="imglogo" HorizontalAlignment="Left" Height="80" Margin="10,66,0,0" VerticalAlignment="Top" Width="334" Source="images\logo.png" Stretch="fill">
                <Image.Effect>
                    <DropShadowEffect Direction="320" ShadowDepth="10" Opacity="0.7"/>
                </Image.Effect>
            </Image>

            <Button x:Name="btnconnexion" Content="Connexion" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="154" Foreground="#FFFCFCFC" Height="25" FontSize="18" FontFamily="Calibri" Margin="0,0,30,50.6">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.7" Direction="320" ShadowDepth="8"/>
                </Button.Effect>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF5479BB" Offset="0.015"/>
                        <GradientStop Color="#FF2558B3" Offset="0.869"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="lblHeure" Content="Label" Height="199.2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <DockPanel Margin="0,-9,-2.4,19.6"  HorizontalAlignment="Stretch">
                <Menu DockPanel.Dock="Top" Height="10" Margin="0,-165,-0.4,0" >
                    <Menu.Background>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#FF080707" Offset="0.162"/>
                            <GradientStop Color="#FF1767C2" Offset="0.992"/>
                            <GradientStop Color="#FFF2F2F2" Offset="0.002"/>
                        </LinearGradientBrush>
                    </Menu.Background>

                    <MenuItem Header="_Options" FontFamily="Stencil" TextBlock.Foreground="White" Margin="0,-1,0,0" FontSize="6" >
                        <MenuItem Header="_1" Background="#FF1767C2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Foreground="White" Height="12"/>
                        <MenuItem Header="_2" Background="#FF1768C2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Height="12"/>
                        <MenuItem Header="_fermer" Background="#FF1767C2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Click="fermer"  Height="12"/>
                    </MenuItem>

                    <MenuItem Header="_Connexion" FontFamily="Stencil" TextBlock.Foreground="White" Margin="0,-1,0,0" FontSize="6">
                        <MenuItem Header="_Se Connecter" Background="#FF1767C2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Height="12"/>
                        <MenuItem Header="_Se Déconnecter" Background="#FF1767C2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Height="12"/>
                    </MenuItem>
                    <MenuItem Header="_?" TextBlock.Foreground="White" FontFamily="Stencil" Margin="0,-1,0,0" FontSize="6">
                        <MenuItem Header="_à propos" Height="12"/>
                    </MenuItem>
                    <MenuItem Header="_" TextBlock.Foreground="White" FontFamily="Stencil"  HorizontalAlignment="Right" Click="minimiser" />

                </Menu>


            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
