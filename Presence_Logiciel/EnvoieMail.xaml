<Window x:Name="intEnvoieMail" x:Class="EnvoieMail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="EnvoieMail" Height="300" Width="528">
    <Grid>
        <Label x:Name="lblMessage" Content="Message :" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="rctMessage" HorizontalAlignment="Left" Height="130" Margin="21,64,0,0" VerticalAlignment="Top" Width="477">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnEnvoyer" Content="Envoyer" HorizontalAlignment="Left" Margin="423,219,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
